{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///Users/george/argus/budget/dance/setup/setup_schema.json",
  "title": "Budget Dance Setup",
  "description": "Validates setup.yaml",
  "type": "object",
  "properties": {
    "workbook":{"type":"string"},
    "start_year": {"type": "integer","exclusiveMinimum": 2010},
    "end_year": {"type": "integer","exclusiveMaximum": 2070},
    "year_column_width": {"type": "integer","exclusiveMaximum": 70},
    "hide_years":{"type":"array","items":{"type": "integer"}},
    "first_forecast_year": {"type": "integer","exclusiveMinimum": 2010,"exclusiveMaximum": 2070},
    "zoom_scale": {"type": "integer","exclusiveMinimum": 39,"exclusiveMaximum": 301},
    "theme":{"enum":["Office Theme","Badge","Berlin","Vapor Trail"]},
    "lambdas":{
      "type":"array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type":"string"},
          "comment":{"type":"string"},
          "formula":{"type":"string"}
        },
        "required": ["name", "formula", "comment"]
      }
    },
    "sheet_groups": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "color": {"$ref": "#/$defs/color"},
          "table_style": { "type": "string"}
        },
        "required": [
          "color",
          "table_style"
        ]
      }
    },
    "sheets": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "sheet_group": {
            "type": "string"
          },
          "tables": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/table"
            }
          }
        }
      }
    }
  },
  "required": [
    "start_year",
    "end_year",
    "first_forecast_year"
  ],
  "$defs": {
    "action": {
      "type": "object",
      "properties": {
        "target_field": {"type": "string"},
        "constant": {"anyOf": [{"type":"string"},{"type":"number"}]},
        "formula": {"type": "string"},
        "suffix": {"type": "string"}
      },
      "required":["target_field"]
    },
    "edge":{"enum" :["left","right","top","bottom"]},
    "border":{
      "type": "object",
      "properties": {
        "edges": {"type":"array","items":{"$ref":"#/$defs/edge"}},
        "style": {"enum" :["thin","medium","thick"]},
        "color": {"$ref": "#/$defs/color"}
      },
      "required":["edges","style","color"]
    },
    "color": {
      "oneOf":[
        {"type": "string","pattern": "[a-fA-F0-9]{6}" },
        {"type": "integer","minimum": 0, "maximum":9}
      ]
    },
    "column": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "width": {"type": "integer"},
        "horiz": {"enum": ["center", "left", "right"]},
        "number_format": {
          "oneOf": [
            {"type": "integer", "exclusiveMinimum": -1, "exclusiveMaximum": 49},
            {"enum": ["####"]}
          ]
        }
      },
      "required": ["name"]},
    "file_set": {
      "type": "object",
      "properties": {
        "base_path": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        }
      }
    },
    "data": {
      "type": "object",
      "properties": {
        "source": {"enum" :["internal","local","remote","none"]},
        "site_code": {"enum" :["BLS","FEDREG"]},
        "api_key": {"type":"string"},
        "url": {"type":"string"},
        "parameters": {"$ref":"#/$defs/parameter"},
        "data_type": {"enum" : ["json_index","json_records","md_529_distr","md_acct","md_bal2","md_hsa_disb","md_iande_actl", "md_invest_actl","md_invest_iande_values","md_invest_iande_ratios","md_ira_distr","md_pr_sav","md_roth","md_sel_inv","md_transfers_actl", "retire_template","retire_medical_template","tax_template","md_tag_sums"]},
        "path": {"type":"string"},
        "group": {"type":"array","items":{"type":"string"}},
        "no_details_for": {"type":"array","items":{"type":"string"}},
        "include_zeros": {"type":"array","items":{"type":"string"}},
        "tax_free_keys": {"type":"array","items":{"type":"string"}},
        "hier_insert_paths": {"type":"array","items":{"type":"string"}},
        "hier_separator":{"type":"string","maxLength":1},
        "file_set": {"$ref":"#/$defs/file_set"},
        "hier_alt_agg":{
          "type": "object",
          "additionalProperties":{"enum":["MIN","MAX","PRODUCT"] }
        },
        "template":{
          "type": "object",
          "properties":{ 
            "fold_spacing": {"type":"integer"},
            "fold_field": {"type":"string"},
            "fields": {"type":"array","items":{"type":"string"}}
          }
        },
        "sheet": {"type":"string"},
        "table": {"$ref":"#/$defs/data_table"},
        "name": {"type":"string"}
      },
      "required":["source"]
    },
    "data_table": {
      "type": "object",
      "properties": {
        "find_method": {"enum":["caption","xml"]},
        "method_parms": {
          "type": "object",
          "properties": {
            "text": {"type": "string"},
            "xpath":{"type": "string"}
          }
        }
      }
    },
    "dyno_field":{
      "type": "object",
      "properties":{
        "base_field": {"anyOf": [{"type":"string"},{"type":"array"}]},
        "matches": {"anyOf": [{"type":"string"},{"type":"array"}]},
        "actions": {"type":"array","items":{"$ref":"#/$defs/action"}}        
      },
      "required":["base_field","matches","actions"]    
    },
    "edit_check":{
      "type":"object",
      "properties":{
        "for_columns":{"type":"array","items":{"type":"string"}},
        "formula": {"type": "string"}
      }
    },
    "fill":{
      "type": "object",
      "properties":{
        "bgcolor":{"$ref":"#/$defs/color"}
      },
      "required":["bgcolor"]      
    },
    "font":{
      "type": "object",
      "properties":{
        "bold":{"type":"boolean"},
        "color":{"$ref":"#/$defs/color"}
      }      
    },
    "highlight":{
      "type": "object",
      "properties": {
        "highlight_set": {
          "type": "object",
          "properties": {
            "formula": {
              "type": "string"
            },
            "border": {
              "$ref": "#/$defs/border"
            },
            "fill": {
              "$ref": "#/$defs/fill"
            },
            "font": {
              "$ref": "#/$defs/font"
            },
            "keys": {
              "type": "array"
            }
          },
          "required": ["formula"],
          "additionalProperties": false
        }
      }
    },
    "match_criteria":{

        "type":"object",
        "properties":{
          "formula": {"type":"string"},
          "first_item": {"type":"string"},
          "query": {
            "type": "array",
            "items":{
              "additionalProperties": false,
              "type":"object",
              "properties":{
                "field": {"type":"string"},
                "compare_with": {"enum" :["=","starts","not_starting","is_in","not_ending"]},
                "compare_to": {
                  "anyOf": [
                    {"type": "string"},
                    {"type": "number"},
                    {"type": "array",
                      "items": {"type": "string"}
                    }
                  ]
                },
                "look_up": {
                  "type":"object",
                  "properties":{
                    "table": {"type":"string"},
                    "index_on":{"type":"string"},
                    "value_field":{"type":"string"}
                  },
                  "required":["table","index_on","value_field"]
                }
              },
              "required": ["field","compare_with","compare_to"]
            }
          }
        },
        "required": ["formula","query"]

    },
    "match_list":{
      "type": "object",
      "properties": {
        "base_field": {"type":"string"},
        "matches": {
          "type": "array",
          "items": {"type": "string"}
        },
        "first_item": {"type":"string"},
        "formula": {"type":"string"}
      },
      "required": ["base_field","matches","formula"],
      "additionalProperties": false           
    },
    "parameter": {
      "type": "object",
      "properties": {
        "start_year": {"type": "integer" },
        "end_year": {"type": "integer"},
        "seriesid": {"type": "array","items": {"type": "string"}
        }
      }
    },
    "preserve":{
      "type":"object",
      "properties":{
        "method": {"enum" :["sparse","full","none"]},
        "non_year_cols": {
          "type":"array",
          "items": {"type":"string"}
        }
      }
    },
    "row_formula":{
      "oneOf":[
        {"$ref" :  "#/$defs/match_list"},
        {"$ref" :  "#/$defs/match_criteria"}
      ]
    },
    "sheet": {
      "type": "object",
      "properties": {
        "sheet_group": {
          "type": "string"
        },
        "tables": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/table"
          }
        }
      },
      "required": [
        "sheet_group",
        "tables"
      ]
    },
    "table": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "title": {"type": "string"},
        "include_years": {"type": "boolean"},
        "columns": {"type": "array","items": {"$ref": "#/$defs/column"}},
        "data":{"$ref":"#/$defs/data"},
        "hidden": {"type":"array","items":{"type":"string"}},
        "highlights": {"$ref": "#/$defs/highlight"},
        "actl_formulas":{"type":"array","items": {"$ref": "#/$defs/row_formula"}},
        "all_col_formulas":{"type":"array","items": {"$ref": "#/$defs/row_formula"}},
        "fcst_formulas":{"type":"array","items": {"$ref": "#/$defs/row_formula"}},
        "title_row":{"type":"integer"},
        "start_col":{"type":"integer"},
        "actual_only":{"type":"boolean"},
        "dyno_fields":{"type":"array","items":{"$ref":"#/$defs/dyno_field"}},
        "edit_checks":{"type":"array","items":{"$ref":"#/$defs/edit_check"}},
        "preserve":{"$ref":"#/$defs/preserve"},
        "fold_at":{"type":"integer"}
      },
      "required":["name","title","include_years","columns"]
    }
  }
}